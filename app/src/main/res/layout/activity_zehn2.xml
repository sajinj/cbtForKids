<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:layoutDirection="rtl"
        android:background="@mipmap/image3"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="فیلم های بخش ذهن آگاهی"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_margin="16dp"
        />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/videoGol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/gol_m"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:onClick="videoClick"
                />

            <ImageView
                android:id="@+id/videoKuh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/kuh_m"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:onClick="videoClick"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/videoHava"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:src="@mipmap/hava_m"
                android:onClick="videoClick"

                />

            <ImageView
                android:id="@+id/videoAb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:src="@mipmap/ab_m"
                android:onClick="videoClick"

                />
        </LinearLayout>
    <ImageView
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/image4"

        />
    </LinearLayout>

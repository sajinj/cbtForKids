<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/image3"
    tools:context=".SlahActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ehsasGame1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/bc1"
            android:gravity="center"
            android:onClick="slahBtnClick"
            android:paddingBottom="32dp"
            android:text="بازی شناخت احساسات 1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/ehsasGame2"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/bc1"
            android:gravity="center"
            android:onClick="slahBtnClick"
            android:paddingBottom="32dp"
            android:text="بازی شناخت احساسات 2"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/story"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/bc1"
            android:gravity="center"
            android:onClick="slahBtnClick"
            android:paddingBottom="32dp"
            android:text="داستان"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/work_page1"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/bc1"
            android:gravity="center"
            android:onClick="slahBtnClick"
            android:paddingBottom="32dp"
            android:text="کاربرگ 1"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/work_page2"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/bc1"
            android:gravity="center"
            android:onClick="slahBtnClick"
            android:paddingBottom="32dp"
            android:text="کاربرگ 2"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/jadval"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/bc1"
            android:gravity="center"
            android:onClick="slahBtnClick"
            android:paddingBottom="32dp"
            android:text="جدول تکالیف"
            android:textColor="@android:color/black"

            />

    </LinearLayout>

</ScrollView>
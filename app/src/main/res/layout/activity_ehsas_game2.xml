<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bc_image_white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/game1_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@mipmap/game1_mage5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/game1_gozine1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:src="@mipmap/stiker_hesadat"
            android:onClick="gozineClick"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/game1_gozine2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"

            android:src="@mipmap/stiker_hesadat"
            android:onClick="gozineClick"
            android:scaleType="fitXY"


            />

        <ImageView
            android:id="@+id/game1_gozine3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"

            android:src="@mipmap/stiker_hesadat"
            android:onClick="gozineClick"

            android:scaleType="fitXY"

            />


    </LinearLayout>


</LinearLayout>